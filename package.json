{
  "name": "fatina",
  "description": "Small & Light tweening library for web / games",
  "version": "2.1.0",
  "homepage": "https://kefniark.github.io/Fatina/",
  "main": "build/fatina.min.js",
  "types": "build/fatina.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:kefniark/Fatina.git"
  },
  "bugs": {
    "url": "https://github.com/kefniark/Fatina/issues"
  },
  "license": "MIT",
  "keywords": [
    "tween",
    "tweener",
    "tweening",
    "easing",
    "animation",
    "sequence",
    "typescript",
    "game"
  ],
  "author": {
    "name": "Kevin destrem",
    "email": "kef1@free.fr"
  },
  "dependencies": {
    "npm": "^6.4.1"
  },
  "side-effects": false,
  "scripts": {
    "all": "npm run deps && npm run build && npm run dev",
    "deps": "npm install .",
    "build": "tsc && rimraf build && npm run build:dev && npm run build:prod && npm run build:clean",
    "build:dev": "webpack --config=webpack.config.dev.js",
    "build:prod": "webpack --config=webpack.config.prod.js",
    "build:clean": "rimraf lib && rimraf build/lib",
    "dev": "webpack-dev-server",
    "clean": "run-s clean:**",
    "clean:build": "rimraf \"./build\" && rimraf lib",
    "clean:docs": "rimraf \"./docs\"",
    "clean:coverage": "rimraf \"./coverage\" && rimraf \"./.nyc_output\"",
    "reset": "rimraf \"./node_modules\"",
    "test": "run-s test:**",
    "test:lint": "tslint --project tsconfig.json \"./src/**/*.ts\" \"tests/**/*.ts\"",
    "test:unittest": "ts-node node_modules/tape/bin/tape ./tests/**/*.ts | tspec",
    "test:depencencies": "npm-check --production || echo \"Run 'npm run update' to interactively update dependencies for this project\"",
    "docs": "typedoc --out ./docs ./src/",
    "coverage": "nyc --all --reporter=html --reporter=text npm run test:unittest",
    "coveralls": "nyc --all --reporter=text-lcov npm run test:unittest | coveralls",
    "update": "npm-check --update"
  },
  "devDependencies": {
    "@types/node": "^10.10.1",
    "@types/tape": "^4.2.32",
    "coveralls": "^3.0.2",
    "dts-bundle": "0.7.3",
    "npm-check": "^5.9.0",
    "npm-run-all": "^4.1.3",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.2",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1",
    "ts-loader": "^5.1.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.3",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/index.ts",
      "src/fatina.ts"
    ],
    "extension": [
      ".ts"
    ]
  }
}
